{
  "build": {
    "builder": "nixpacks",
    "buildCommand": "pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "python railway_app.py",
    "restartPolicyType": "on_failure",
    "healthcheckPath": "/",
    "port": 7860
  },
  "env": {
    "HOST": "0.0.0.0",
    "PORT": "7860",
    "PYTHONUNBUFFERED": "1",
    "DEFAULT_MODEL": "gemma2:9b"
  }
}