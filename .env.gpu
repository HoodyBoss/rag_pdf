# Local GPU Deployment Configuration - High Performance
# Use for local deployment with NVIDIA GPU

# Environment detection
DEPLOYMENT_ENV=local_gpu
USE_GPU=true
CUDA_VISIBLE_DEVICES=0

# Model Configuration (High Performance)
EMBEDDING_MODEL=intfloat/multilingual-e5-base
EMBEDDING_DEVICE=cuda
ENABLE_SUMMARIZATION=true
SUMMARIZATION_MODEL=StelleX/mt5-base-thaisum-text-summarization

# Text Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNKS=500
AUTO_CLEANUP_INTERVAL=50

# GPU Settings
TORCH_CUDA_ALLOC_CONF=max_split_size_mb:512
CUDA_LAUNCH_BLOCKING=1

# Performance Settings
OMP_NUM_THREADS=4
MKL_NUM_THREADS=4

# Cache Settings (Local storage)
TRANSFORMERS_CACHE=./cache/transformers
SENTENCE_TRANSFORMERS_HOME=./cache/sentence_transformers
HF_HOME=./cache/huggingface

# Gradio Settings for Local
GRADIO_SERVER_NAME=127.0.0.1
GRADIO_SHARE=false
GRADIO_IN_PROCESS=true
PORT=7860

# Logging
LOG_LEVEL=INFO