# Local CPU Deployment Configuration - Balanced Performance
# Use for local deployment without GPU

# Environment detection
DEPLOYMENT_ENV=local_cpu
USE_GPU=false
CUDA_VISIBLE_DEVICES=

# Model Configuration (CPU Optimized)
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu
ENABLE_SUMMARIZATION=true
SUMMARIZATION_MODEL=StelleX/mt5-base-thaisum-text-summarization

# Text Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNKS=300
AUTO_CLEANUP_INTERVAL=30

# CPU Settings
OMP_NUM_THREADS=4
MKL_NUM_THREADS=4

# Cache Settings (Local storage)
TRANSFORMERS_CACHE=./cache/transformers
SENTENCE_TRANSFORMERS_HOME=./cache/sentence_transformers
HF_HOME=./cache/huggingface

# Gradio Settings for Local
GRADIO_SERVER_NAME=127.0.0.1
GRADIO_SHARE=false
GRADIO_IN_PROCESS=true
PORT=7860

# Logging
LOG_LEVEL=INFO