# Railway Deployment Configuration - Memory Optimized
# Cost-effective settings for Railway cloud platform (1GB RAM limit)

# Environment detection
RAILWAY_ENVIRONMENT=production
DEPLOYMENT_ENV=railway

# Model Configuration (Memory Optimized)
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu
ENABLE_SUMMARIZATION=false
SUMMARIZATION_MODEL=StelleX/mt5-base-thaisum-text-summarization

# Text Processing Configuration
CHUNK_SIZE=800
CHUNK_OVERLAP=150
MAX_CHUNKS=100
AUTO_CLEANUP_INTERVAL=20

# GPU Settings (Force Disabled for Railway)
USE_GPU=false
CUDA_VISIBLE_DEVICES=

# Performance Settings
OMP_NUM_THREADS=2
MKL_NUM_THREADS=2
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:32

# Cache Settings (Use temporary storage)
TRANSFORMERS_CACHE=/tmp/transformers_cache
SENTENCE_TRANSFORMERS_HOME=/tmp/sentence_transformers
HF_HOME=/tmp/huggingface_cache

# Gradio Settings for Railway
GRADIO_SERVER_NAME=0.0.0.0
GRADIO_SHARE=false
GRADIO_IN_PROCESS=true
PORT=7860

